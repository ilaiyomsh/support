{
  "name": "support-app",
  "version": "1.0.0",
  "description": "מערכת תמיכה עם הקלטת מסך ל-Monday.com",
  "private": true,
  "type": "module",
  "scripts": {
    "// --- Production Scripts (Monday Code) ---": "",
    "start": "node dist/server/index.js",
    "deploy:push": "mapps code:push",
    "// --- Build Scripts ---": "",
    "build": "tsc && vite build && npm run build:server",
    "build:server": "tsc --project tsconfig.server.json && npm run clean:dist",
    "clean:dist": "test -d dist/server/src/server && cp -r dist/server/src/server/* dist/server/ && rm -rf dist/server/src dist/server/shared || true",
    "deploy:build": "npm run build",
    "deploy": "npm run deploy:build && npm run deploy:push",
    "// --- Development Scripts ---": "",
    "dev": "npm run stop && concurrently \"npm run dev:server\" \"npm run expose\"",
    "dev:server": "concurrently \"vite\" \"node --import tsx src/server/dev.ts\"",
    "expose": "mapps tunnel:create -p 8301",
    "stop": "kill-port 8301 && kill-port 4049 && kill-port 4040 || true",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mondaycom/apps-sdk": "^3.2.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/form-data": "^2.2.1",
    "@types/uuid": "^10.0.0",
    "@vibe/core": "^3.82.2",
    "@vibe/icons": "^1.14.0",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "lucide-react": "^0.562.0",
    "monday-sdk-js": "^0.5.5",
    "multer": "^1.4.5-lts.1",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recordrtc": "^5.6.2",
    "tailwindcss": "^4.1.18",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@mondaycom/apps-cli": "^4.7.4",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-port-killer": "^1.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.0"
  }
}
